<% layout('admin-layout') -%>
    <link rel="stylesheet" href="/stylesheets/admin-chat-min.css">
    <div class="row">

        <div class="col-10 m-auto" >
            <div class="adm-element pt-1 px-1 h-100 loading-float">
                <div id="chat-tabs" class="hRow d-flex d-md-none aln-center jus-center"><span>CLIENTS</span> <span>CHAT</span></div>
                <div class="chat-contents">
                    <div class="row m-0 p-0 h-100">
                        <div class="c_tab_content col-12 col-md-4 p-0 h-100 d-md-flex c_active">
                            <div class="vRow jus-start">
                                <h3 class="hfit bg-white p-0 m-0 pl-2 py-1 text-center">Chats</h3>
                                <div class="hfit ov-auto">
                                    <ul id="clients" class="hfit"></ul>
                                </div>
                                <div class="client-info hfit bg-white py-2 px-2 d-none mb-0 mt-auto">
                                    <div class="vRow jus-center aln-center2">
                                        <label class="font-weight-bold" for="">Nome: <span id="client-name" class="notbold">Nome</span></label>
                                        <label class="font-weight-bold" for="">Telefone: <a id="client-phone" class="my-2 notbold" target="_blank">000000000</a></label>
                                        <label class="font-weight-bold" for="">E-mail: <a id="client-email" class="notbold" target="_blank">E-mail</a></label>
                                    </div>
                                </div>
                                <div class="hRow bottom-bar mb-0 mt-auto jus-start aln-center ">
                                    <span class="c_config-btn mr-auto ml-2" data-toggle="modal" data-target="#local-modal"></span>
                                    <label class="sfit mx-3 d-none" for="">Total: <span>00</span></label>
                                    <label class="sfit mx-3 d-none" for="">On-line: <span>00</span></label>
                                </div>
                            </div>
                        </div>
                        <div class="c_tab_content col-12 col-md-8 p-0 h-100 d-md-flex">
                            <div class="vRow jus-center aln-center">
                                <h3 id="current" class="hfit bg-white p-0 m-0 pl-2 py-1 mt-0 mb-auto">. . .</h3>
                                <div id="messages-vp" class="ov-auto">
                                    <ul id="messages" class="px-3 pb-5"></ul>
                                </div>
                                <div class="vRow bottom-bar aln-center jus-center py-2">
                                    <form class="chat-form hfit" action="#">
                                        <div class="hRow aln-center">
                                            <input id="m" autocomplete="off">
                                            <input type="submit">
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



        </div>
    </div>
  
    <script src="/javascripts/admin-chat-min.js"></script>